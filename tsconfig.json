{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2024",
    "rootDir": "./src",
    "outDir": "./dist",    
    "strict": true,   
    "isolatedModules": true,   
    "skipLibCheck": true,
    "esModuleInterop":true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts/"
  ]
}
